@model AutoSeller.ViewModel.AboutViewForm

@{
    ViewBag.Title = "EditAbout";
}

<h2>Edit About Form</h2>

@using (Html.BeginForm("EditAbout", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DynamicText)
        @Html.TextAreaFor(m => m.DynamicText, new { @class = "form-control", @rows = "15"})
        @Html.ValidationMessageFor(m => m.DynamicText)
    </div>
    <div class="form-group">
        @Html.AntiForgeryToken()
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "About", "Home", null, new { @class = "btn btn-primary" })
        </p>
    </div>
}



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/my-StyleSheet.css")

}